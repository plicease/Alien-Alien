#!/bin/bash -x

set -euo pipefail
IFS=$'\n\t'

rm -rf /tmp/Alien-Build

cpanm -n Dist::Zilla

git clone --depth 2 https://github.com/perl5-Alien/Alien-Build.git /tmp/Alien-Build
cd /tmp/Alien-Build
dzil authordeps --missing | cpanm -n
dzil listdeps   --missing | cpanm -n
dzil install --install-command 'cpanm -n -v .'

git clone --depth 2 git@github.com:plicease/Alien-Build-Plugin-Decode-SourceForge.git /tmp/Alien-Build-Plugin-Decode-SourceForge
cd /tmp/Alien-Build-Plugin-Decode-SourceForge
dzil authordeps --missing | cpanm -n
dzil listdeps   --missing | cpanm -n
dzil install --install-command 'cpanm -n -v .'
